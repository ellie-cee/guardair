{% assign logo_box = ''  %}
  {% if section.settings.columns_desktop == 2 %}
    {% assign logo_box = 'logo_two_box' %}
   {% elsif section.settings.columns_desktop == 4 %}
   {% assign logo_box = 'logo_four_box' %}  
{% endif %}

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}


<div class="textlogoWrappe section-{{ section.id }}-padding">
  <div class="page-width">
    <div class="text_logo_wrapper {{ logo_box }}">
      {% for block in section.blocks %}
        <div class="logoimg_textlink {% if block.settings.bottom_border %}logo_bottom_bdr {% endif %}">
          <div class="grid_literature">
         {% if block.settings.text !=blank %}
           <div class="logos_top_text">
           <a href="{{ block.settings.btn_url }}" target="_blank">
           <h4>{{ block.settings.text }}</h4>
           </a>
           </div>
           {% endif %}
          {% if block.settings.imglogo !=blank %}
            <div class="logos_bottom_image">
           <a href="{{ block.settings.btn_url }}" target="_blank">
             <img src ="{{ block.settings.imglogo  | img_url :"140x180"}}">
           </a>
            </div>
          {% endif %}
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
</div>


{% schema %}
  {
    "name": "Text And Logo Link",
    "settings": [
         {
          "type": "range",
          "id": "columns_desktop",
          "min": 2,
          "max": 4,
          "step": 1,
          "default": 3,
          "label": "t:sections.featured-collection.settings.columns_desktop.label"
        },
        {
        "type": "range",
        "id": "padding_top",
        "min": 0,
        "max": 100,
        "step": 2,
        "unit": "px",
        "label": "t:sections.all.padding.padding_top",
        "default": 36
      },
      {
        "type": "range",
        "id": "padding_bottom",
        "min": 0,
        "max": 100,
        "step": 2,
        "unit": "px",
        "label": "t:sections.all.padding.padding_bottom",
        "default": 36
      }
    ],
    "blocks":[
      {
        "type":"Logo-Text",
        "name":"Logo-Text",
          "settings":[
            {
              "type":"text",
              "id":"text",
              "label":"Title"
            },
            {
              "type":"image_picker",
              "id":"imglogo",
              "label":"Select Image"
            },
            {
              "type":"url",
              "id":"btn_url",
              "label":"Link"
            },
            {
            "type": "checkbox",
            "id": "bottom_border",
            "default": true,
            "label": "Border Bottom"
            }
          ]
      }
    ],
    "presets":[
      {
      "name": "Text And Logo Link"
      }
    ]
  }
{% endschema %}
<style>


 .text_logo_wrapper {
    display: grid;
    width: 100%;
    grid-template-columns: 1fr 1fr 1fr;
    text-align: center;
    row-gap: 22px;
    column-gap: 0px;
}
.logoimg_textlink {
    width: 100%;
    display: grid;
    row-gap: 30px;
}
.logos_top_text h4 {
    color: #002395;
    font-size: 18px;
    font-family: Eurostile-Bol,sans-serif;
    text-transform: capitalize;
    margin:0px;
    transition: 0.3s all linear;
    margin-bottom: 30px;
}
.logos_top_text h4:hover {
    color: #4b92db;
}
  
.logoimg_textlink img {
    max-width: 100%;
}  
.textlogoWrappe .logos_top_text a {
    display: inline-block;
    text-decoration: none;
}  
.text_logo_wrapper.logo_two_box {
    grid-template-columns: 1fr 1fr;
}
.text_logo_wrapper.logo_four_box {
    grid-template-columns: 1fr 1fr 1fr 1fr;
}
.logoimg_textlink.logo_bottom_bdr {
    border-bottom: 2px solid #ddd;
    padding-bottom: 15px;
} 
.textlogoWrappe .grid_literature {
    padding: 0px 15px;
}
  
  
  
</style>