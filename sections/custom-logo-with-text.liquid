{%- style -%}
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
      padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
    }

    .section-{{ section.id }}-padding .itg_content_sectn {
      padding-top: {{ section.settings.logo-padding_bottom | times: 0.75 | round: 0 }}px;
    }

    .section-{{ section.id }}-padding .itg_logo_section.logo_top_bdr {
      padding-top: {{ section.settings.logo-padding_top | times: 0.75 | round: 0 }}px;
    }

    @media screen and (min-width: 750px) {
      .section-{{ section.id }}-padding {
        padding-top: {{ section.settings.padding_top }}px;
        padding-bottom: {{ section.settings.padding_bottom }}px;
      }
    }
{%- endstyle -%}

<div class="itg_custom_logo_wrpr section-{{ section.id }}-padding">
  <div class="page-width">
    {% if section.settings.img_logo != blank %}
      <div class="itg_logo_section {% if section.settings.top_border %}logo_top_bdr {% endif %}">
        {% if section.settings.logo_url != blank -%}
          <a class="itg_logo_link" href="{{ section.settings.logo_url }}" target="_blank">
        {%- endif -%}
        <span><img src="{{ section.settings.img_logo | img_url:'master' }}" alt="logo"></span>
        {% if section.settings.logo_url != blank %}</a>{% endif %}
      </div>
    {% endif %}
    {% if section.settings.content != blank %}
      <div class="itg_content_sectn">
        {{ section.settings.content }}
      </div>
    {% endif %}
    <div class="itg_image_section">
      {% if section.settings.img_first != blank %}
        <div class="itg_first_image">
          <img src="{{ section.settings.img_first | img_url:'master' }}" alt="image">
        </div>
      {% endif %}
      {% if section.settings.img_second != blank %}
        <div class="itg_second_image">
          <img src="{{ section.settings.img_second | img_url:'master' }}" alt="image">
        </div>
      {% endif %}
    </div>
  </div>
</div>

<style>
  .itg_content_sectn p {
      font-size: 18px;
      line-height: 1.67;
      margin-top: 0;
      margin-bottom: 10px;
      color: #000;
      letter-spacing: normal;
  }
  .itg_content_sectn p a {
      color: #002395;
      font-family: "Eurostile-Bol","Eurostile-Reg","Calibri","Trebuchet MS",Helvetica,Arial,Sans-serif;
      transition: .5s;
      text-decoration: none;
  }
  .itg_content_sectn p a:hover{
      color: #991e14;
  }
  .itg_image_section {
      width: 100%;
      display: flex;
      flex-wrap: wrap;
      justify-content: space-between;
  }
  .itg_first_image {
      width: calc(50.0% - 15px);
      text-align: center;
  }
  .itg_first_image img {
      max-width: 100%;
  }
  .itg_second_image {
      width: calc(50.0% - 15px);
      text-align: center;
  }
  .itg_second_image img {
      max-width: 100%;
  }

  .itg_logo_section img {
      max-width: 100%;
  }
  .itg_logo_section {
      width: 100%;
      display: flex;
  }
  .itg_logo_section.logo_top_bdr {
      border-top: 1px solid #eee;
  }
  body.gradient.page.our-brands-new p strong {
      margin-bottom: 0;
  }
</style>
{% schema %}
{
  "name": "Custom Logo With Text",
  "settings": [
    {
      "type":"image_picker",
      "id":"img_logo",
      "label":"Select Logo Image"
    },
    {
      "type":"url",
      "id":"logo_url",
      "label":"Logo URL"
    },
    {
      "type":"richtext",
      "id":"content",
      "label":"Content"
    },
    {
      "type":"image_picker",
      "id":"img_first",
      "label":"Select Image First"
    },
    {
      "type":"image_picker",
      "id":"img_second",
      "label":"Select Image Second"
    },
    {
    "type": "checkbox",
    "id": "top_border",
    "default": false,
    "label": "Top Border"
    },
     {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 2,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 2,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 36
    },
    {
      "type": "range",
      "id": "logo-padding_top",
      "min": 0,
      "max": 100,
      "step": 2,
      "unit": "px",
      "label": "Top Padding (Logo)",
      "default": 36
    },
    {
      "type": "range",
      "id": "logo-padding_bottom",
      "min": 0,
      "max": 100,
      "step": 2,
      "unit": "px",
      "label": "Bottom Padding (Logo)",
      "default": 36
    }
  ],
  "presets":[
    {
      "name": "Custom Logo With Text"
    }
  ]
}
{% endschema %}

