{{ 'v2-components-nav-drawer.css' | asset_url | stylesheet_tag }}
{% unless section.settings.disable_predictive_search %}
<script src="{{ 'v2-components-predictive-search.js' | asset_url }}" defer></script>
{% endunless %}
