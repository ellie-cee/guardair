{% schema %}
{
  "name": "Header",
  "class": "section-v2-header",
  "settings": [
    {
      "id": "disable_predictive_search",
      "type": "checkbox",
      "label": "Disable predictive search",
      "default": false
    },
    {
      "type": "header",
      "content": "Menu"
    },
    {
      "id": "event_type",
      "type": "select",
      "label": "Event type",
      "default": "hover",
      "options": [
        {
          "value": "hover",
          "label": "Hover"
        },
        {
          "value": "click",
          "label": "Click"
        }
      ],
      "info": "Open dropdowns on hover or click"
    },
    {
      "id": "show_link_arrow",
      "type": "checkbox",
      "label": "Show link arrow",
      "default": true
    },
    {
      "id": "show_sublink_arrow",
      "type": "checkbox",
      "label": "Show sublink arrow",
      "default": true
    },
    {
      "id": "scroll_when_larger_height",
      "type": "checkbox",
      "label": "Scroll Second Submenu",
      "info": "Scroll the second submenu when it's taller than its parent",
      "default": false
    },
    {
      "id": "menu_min_height",
      "type": "range",
      "label": "Submenu min height",
      "info": "Minimum height of the submenu in rows",
      "default": 4,
      "min": 1,
      "max": 10
    },
    {
      "id": "nav_menu",
      "type": "link_list",
      "label": "Navigation menu"
    },
    {
      "id": "secondary_menu",
      "type": "link_list",
      "label": "Mobile drawer bottom menu"
    },
    {
      "type": "header",
      "content": "Layout"
    },
    {
      "id": "number_of_rows",
      "type": "range",
      "label": "Number of rows",
      "min": 1,
      "max": 3,
      "default": 2
    },
    {
      "type": "select",
      "id": "sticky_header_type",
      "options": [
        {
          "value": "none",
          "label": "t:sections.header.settings.sticky_header_type.options__1.label"
        },
        {
          "value": "on-scroll-up",
          "label": "t:sections.header.settings.sticky_header_type.options__2.label"
        },
        {
          "value": "always",
          "label": "t:sections.header.settings.sticky_header_type.options__3.label"
        },
        {
          "value": "reduce-logo-size",
          "label": "t:sections.header.settings.sticky_header_type.options__4.label"
        }
      ],
      "default": "on-scroll-up",
      "label": "t:sections.header.settings.sticky_header_type.label"
    },
    {
      "id": "padding_block",
      "type": "number",
      "label": "Padding",
      "default": 20,
      "info": "Top & bottom padding in pixels"
    },
    {
      "type": "color_scheme",
      "id": "primary_color",
      "label": "Primary color",
      "info": "Color for header background, and text"
    },
    {
      "type": "color_scheme",
      "id": "secondary_color",
      "label": "Secondary color",
      "info": "Color for navigation and icons"
    },
    {
      "type": "color_scheme",
      "id": "nav_color_scheme",
      "label": "Desktop menu color scheme",
      "info": "Color scheme for the desktop menu"
    },
