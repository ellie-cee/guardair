    },
    {
      "type": "range",
      "id": "image_width",
      "min": 10,
      "max": 200,
      "step": 2,
      "default": 100,
      "label": "Image size"
     },
    {
      "type": "range",
      "id": "animation_speed",
      "min": 15,
      "max": 100,
      "step": 1,
      "default": 20,
      "label": "Animation speed (seconds)"
    }
  ],
  "blocks": [
    {
      "type": "image_picker",
      "name": "Logo",
      "limit": 25,
      "settings": [
         {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "GUA Logo Marquee",
      "category":"Guardair"
    }
  ]
}
{% endschema %}