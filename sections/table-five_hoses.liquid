{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}
<div class="itg_part_accessories_wrapper five_hoseswrapper_hoses section-{{ section.id }}-padding">
  <div class="page-width">
    <div class="itg_img_text_div">
      {% if section.settings.img!=blank %}
      <img src="{{ section.settings.img | img_url: 'master' }}" alt="{{ section.settings.heading }}">
      {% endif %}
      {% if section.settings.heading!=blank  %}<h3>{% if section.settings.link != blank %}<a href="{{ section.settings.link }}">{% endif %}{{ section.settings.heading }}{% if section.settings.link != blank %}</a>{% endif %}</h3>{% endif %}
    </div>
    <div class="itg_product_table">
      <ul>
        <li>
           <div class="itg_pro_variants_second itg_part_accessories">
            {{ section.settings.f_head }}
          </div>
          <div class="itg_pro_description  itg_part_accessories">
            {{ section.settings.s_head }}
          </div>
          <div class="itg_product itg_part_accessories">
            {{ section.settings.variants_head }}
          </div>
           <div class="itg_part_number itg_part_accessories">
             {{ section.settings.t_head }}
          </div>
          <div class="itg_pro_variants_first itg_part_accessories">
            {{ section.settings.last_head }}
          </div>
        </li>
        {% for block in section.blocks %}
          {% assign product = block.settings.itg_product %}  
          {%- assign current_variant = product.selected_or_first_available_variant -%}
          {%- assign featured_image = current_variant.featured_image -%}
  {% if featured_image == blank %}
    {%- for image in product.images -%}
        {%- assign alts = image.alt | split: ',' -%}
        {%- assign alt_classes = '' -%}
        {%- for alt in alts -%}
          {%- capture alt_classes -%}{{ alt_classes }} alt_{{ alt | handleize }}{%- endcapture -%}
        {%- endfor -%}
        {%- if current_variant_title_handle != blank and alt_classes contains current_variant_title_handle -%}
          {%- assign featured_image = image -%}
          {%- break -%}
        {%- endif -%}
    {%- endfor -%}
    {%- if featured_image == blank -%}
      {%- assign featured_image = product.featured_image -%}
    {%- endif -%}
  {%- endif -%}
       {%- for variant in product.variants -%}
         {%- assign var_sku = variant.sku -%}
         {%- assign var_title = variant.title  -%}     
         {%- assign var_id = variant.id -%}
         {%- assign show_overview = false -%}
         {%- assign overview = '' -%}
          {%- for i in (1..12) -%}
            {%- capture include_id -%}Includes-{{ i }}{%- endcapture -%}
              {%- if variant.metafields['global'][include_id] != blank -%}
                {%- assign show_overview = true -%}
                {%- capture overview -%}{{ overview | strip  }}{{ variant.metafields['global'][include_id] }}{%- endcapture -%}
            {%- endif -%}
        {%- endfor -%}
        {%- if overview != blank -%}
            {%- capture overview %}{{ overview | strip }}{%- endcapture -%}
        {%- endif -%}
        <li>
          <div class="itg_pro_variants_second itg_part_accessories imag_pro_title">
          {% assign itg_vaccumes =  block.settings.itg_product_vaccume %}    
         <a href="{{ itg_vaccumes.url }}">
            <img src="{{ itg_vaccumes.featured_image | img_url : "200X200" }}"><br>
             {{ itg_vaccumes.title }}
         </a>
          </div>
         
          <div class="itg_part_accessories itg_pro_description">
            {{ product.title }} <br> {% if var_title == 'Default Title' %} {% else %}{{ var_title }} {% endif %}
          </div>

             <div class="itg_part_accessories itg_product">
            {%- for image in product.images -%}
                     
               
         {% assign alt_handle = image.alt | handleize %}
           {% assign var_title_handle = variant.title | handleize %}
              {% if var_title == 'Default Title' %}
               <a href="{{ shop.url }}{{ product.url }}"> <img src="{{ image | img_url: "300X130" }}" 
                         class=" {% if itg_img_zoom_percent  %}  img_producto {% endif %}" 
                         sizes = "{{ sizes }}"
                         width= "{{ widths }}"
                         alt="{{ image.alt | escape }}">  </a>    
                
              {% elsif var_title_handle == alt_handle %}
             <a href="{{ shop.url }}{{ product.url }}?variant={{ var_id }}/"> <img src="{{ image | img_url: "300X130" }}" 
                         class=" {% if itg_img_zoom_percent  %}  img_producto {% endif %}" 
                         sizes = "{{ sizes }}"
                         width= "{{ widths }}"
                         alt="{{ image.alt | escape }}">  </a>     
                      {% endif %}
            {%- endfor -%}
        </div>

          <div class="itg_part_accessories itg_part_number">
            <a href="{{ shop.url }}{{ product.url }}?variant={{ var_id }}/">	{{ var_sku }} </a>
          </div>

          
          <div class="itg_pro_variants_first itg_part_accessories">
           {{ block.settings.hose_cuffs }}
          </div>
          
         
         
          
        </li>
        {% endfor %}
        {% endfor %}
      </ul>
    </div>
</div>

</div>
{% schema %}
  {
      "name": "Hoses Five Table Product",
    "settings": [
      {
        "type": "image_picker",
        "id": "img",
        "label": "Image"
      },
      {
        "type": "text",
        "id": "heading",
        "label": "Heading"
      },
      {
        "type": "url",
        "id":"link",
        "label": "Link"
      },
      {
        "type": "header",
        "content": "Table Heading"
      },
      {
        "type": "text",
        "id":"f_head",
        "label": "First Heading"
      },
      {
        "type": "text",
        "id":"s_head",
        "label": "Second Heading"
      },
      {
        "type": "text",
        "id":"variants_head",
        "label": "Third Heading"
      },
      {
        "type": "text",
        "id":"t_head",
        "label": "Fourth Heading"
      },
      {
        "type": "text",
        "id":"last_head",
        "label": "Fifth Heading"
      },
      {
        "type": "range",
        "id": "padding_top",
        "min": 0,
        "max": 100,
        "step": 1,
        "unit": "px",
        "label": "t:sections.all.padding.padding_top",
        "default": 36
      },
      {
        "type": "range",
        "id": "padding_bottom",
        "min": 0,
        "max": 100,
        "step": 1,
        "unit": "px",
        "label": "t:sections.all.padding.padding_bottom",
        "default": 36
      }
    ],
    "blocks":[
      {
        "type": "block",
        "name": "Block",
        "settings": [
          {
            "type": "product",
            "id": "itg_product_vaccume",
            "label": "Vacuum Model Product"
          },
          {
            "type": "product",
            "id": "itg_product",
            "label": "Product"
          },
           {
            "type": "richtext",
            "id": "hose_cuffs",
            "label": "Content"
          }
        ]
      }
    ],
    "presets":[
      {
        "name": "Hoses Five Table Product"
      }
    ]
  }
{% endschema %}

