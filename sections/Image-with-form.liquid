{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

<div class="image_with_from section-{{ section.id }}-padding">
  <div class="page-width">
      <div class="image_form_head">
        {{ section.settings.description }}
      </div>
    <div class="image-with_formimage">
        <div class="image-with-text__media-item">
          <img src="{{ section.settings.images | img_url : "master" }}"/>
        </div>
        <div class="image_with_formstext">
              {{ section.settings.custom_liquid }}
        </div>
    </div>
  </div>
</div>



{% schema %}
  {
    "name": "Image with Form",
    "settings": [
      {
        "type":"richtext",
        "id":"description",
        "label":"Description"
      },
      {
        "type":"image_picker",
        "id":"images",
        "label":"Select image"
      },
      {
      "type": "liquid",
      "id": "custom_liquid",
      "label": "t:sections.custom-liquid.settings.custom_liquid.label",
      "info": "t:sections.custom-liquid.settings.custom_liquid.info"
     },
      {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 2,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 2,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 36
    }
    ],
    "presets":[
      {
      "name": "Image with Form"
      }
    ]
  }
{% endschema %}

<style>

.image-with_formimage {
    display: grid;
    width: 100%;
    grid-template-columns: 1fr 1fr;
    gap: 30px;
}
.image-with-text__media-item img {
    width: 100%;
}
.image_form_head p, .image_form_head li {
    font-size: 16px !important;
}

  
</style>