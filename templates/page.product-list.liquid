{% style %}
  sticky-header {margin-bottom:6rem;}  
  table {max-width:700px;margin:0 auto;background:#fff;color:#000;}
  th,td {color:#000;background:#fff;}
  th {background:#eee;}
  .broken {background-color:#ff0000;}
{% endstyle %}

<div class="page-width" style="margin-top:6rem;">

  {% assign product_types = 'Vacuums,Parts & Accessories,Air Hoses & Fittings' %}
  {% assign types = product_types | split: ',' %}

  {% for type in types %}
    <h2>{{ type }}</h2>
      {% assign current_collection = collections.all.products | where: "type", type %}
 
      {% assign sorted_products = current_collection | sort: 'title' %}

        {% render 'ywm-product-table', collection:current_collection %}
      <hr>
  {% endfor %}
  

</div>