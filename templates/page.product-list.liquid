{% style %}
  sticky-header {margin-bottom:6rem;}  
  table {margin:0 auto;background:#fff;color:#000;}
  th,td {color:#000;}
  th {background:#eee;}
  .review {background-color:#9eb9e140;}  
  .broken {background-color:#dda8a857;}
  h2 {margin:0 auto;}
{% endstyle %}

<div class="page-width2" style="margin:8rem auto 0rem;max-width:1500px;">

  {% assign product_types = 'Vacuums,Parts & Accessories,Air Hoses & Fittings' %}
  {% assign types = product_types | split: ',' %}
  {% assign test_collection = collections['test-collection'] %}
  {% for type in types %}
    <h2>{{ type }}</h2>
      {% assign current_collection = collections.all.products | where: "type", type %}
        {% render 'ywm-product-table', collection:test_collection %}
        {% render 'ywm-product-table', collection:current_collection %}
 
      <hr>
  {% endfor %}
  

</div>