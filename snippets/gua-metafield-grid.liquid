{% assign limit = 3 %}
{% assign count = 0 %}
{% assign variant = product.selected_or_first_available_variant %}
{% case product.type %}
        {% when 'Vacuums' %}
                {% assign val1 = variant.metafields.global.Vacuum-Flow %}
        {% when 'Air & Syphon Guns' %}   
                {% assign val1 = variant.metafields.global.Output-Thrust %}                    
                {% assign val2 = variant.metafields.global.Min-Compressor-Required %}                
{% endcase %}
<div class="card-metafields grid">
        <h2>{{ product.title }}</h2>
        <h3>{{ product.selected_or_first_available_variant.id }}-->{{ val1 }}--{{ val1.type }}--{{ val1.value }}--{{ val1.label }}</h3>
        {% for row in (1..limit) %} 
                {% if val1 %}<div class="meta__item"><span class="meta-label">{{ val1.label }}:</span><span class="meta-value">{{  val1.value }}</span></div>{% assign count = count | plus:1 %}{% endif %}
                <div class="meta__item"><span class="meta-label">Title:</span><span class="meta-value"> value</span></div>

                {% if count > limit %}{% break %}{% endif %}
        {% endfor %}

        
</div>