{% assign limit = 3 %}
{% assign count = 0 %}
{% assign variant = product.selected_or_first_available_variant %}
{% case product.type %}
        {% when 'Vacuums' %}
                {% assign val1 = variant.metafields.global.Vacuum-Flow %}
        {% when 'Air & Syphon Guns' %}   
                {% assign val1 = variant.metafields.global["Output-Thrust"] %} 
                    {% if val1.definition.name %}{% assign val1_name = val1.definition.name %}{% else %}{% assign val1_name = 'Output Thrust' %}{% endif %}
                {% assign val2 = variant.metafields.global.Min-Compressor-Required %}                
{% endcase %}
<div class="card-metafields grid">
 
        {% for row in (1..limit) %}
                {% if val1 or val2 %}
                        {% if val1 %}<div class="meta__item"><span class="meta-label">{{ val1_name }}:</span><span class="meta-value">{{  val1.value }}</span></div>{% assign count = count | plus:1 %}{% endif %}
                
                {% else %}<div class="meta__item"><span class="meta-label">Title:</span><span class="meta-value"> value</span></div>
                {% endif %}

                {% if count > limit %}{% break %}{% endif %}
        {% endfor %}

        
</div>